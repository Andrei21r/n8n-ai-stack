{
    email {$SSL_EMAIL}
}

# n8n (Main Domain)
{$DOMAIN_NAME} {
    reverse_proxy n8n:5678 {
        flush_interval -1
    }
}

# Portainer
portainer.{$DOMAIN_NAME} {
    reverse_proxy portainer:9000
}

# RabbitMQ Management
rabbit.{$DOMAIN_NAME} {
    reverse_proxy rabbitmq:15672
}

# Postgres Admin (Adminer)
pg.{$DOMAIN_NAME} {
    reverse_proxy adminer:8080
}

# Redis UI (Redis Commander)
redis.{$DOMAIN_NAME} {
    reverse_proxy redis-commander:8081
}

# Ollama UI (Open WebUI)
ollama.{$DOMAIN_NAME} {
    reverse_proxy open-webui:8080
}
